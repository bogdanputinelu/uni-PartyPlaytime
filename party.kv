                text_color_focus: 0, 0, 0, 1
                size_hint_x: None
                width: "326dp"
                y: details_box.top - self.height * 2 - dp(4)
                x: details_box.x + (details_box.width - self.width) / 2

    MDFloatLayout:
        size_hint: 1.16, None
        height: "250dp"
        y: account_box.top - self.height * 2 - dp(10)

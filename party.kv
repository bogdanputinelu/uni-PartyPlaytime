                    text_size: root.width - dp(100), None
                    padding_x: "28dp"
                    theme_text_color: "Hint"

                MDBoxLayout:
                    adaptive_height: True
                    spacing: "12dp"
                    padding: "12dp"

                    MDIconButton:
                        icon: "map-marker-outline"

                    MDIconButton:
                        icon: "map-search-outline"

                    MDIconButton:
                        icon: "home-outline"

                    MDFlatButton:
                        text: "[b]More[/b]"
                        pos_hint: {"center_y": .5}

    MDBoxLayout:
        size_hint: None, None
        size: "144dp", "48dp"
        pos_hint: {"right": 1}
        md_bg_color: "black"



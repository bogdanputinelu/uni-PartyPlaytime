    MDFloatLayout:
        size_hint: None, None
        size: 0, 0
        MDLabel:
            text: "PartyPlaytime"
            font_name: "fonts/BrunoAce-Regular.ttf"
            font_size: "22sp"
            bold: True
            adaptive_size: True
            y: (home.top - self.height * 1.7)
            x: (home.width - self.width) / 2

<BoardBlitzScreen>:
    name: "boardblitz"
    md_bg_color: "white"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            md_bg_color: root.md_bg_color
            specific_text_color: "black"
            elevation: 0
            right_action_items: [["magnify", lambda x: x]]
            left_action_items: [["chevron-left", lambda x: root.go_back(app.root)]]

        MDBoxLayout:
            adaptive_height: True
            spacing: "18dp"
            padding: 0, 0, "24dp", 0

            MDSeparator:
                size_hint_x: None
                width: "36dp"
                color: "black"
                pos_hint: {"center_y": .5}

            MDIcon:
                icon: "weather-sunny"
                pos_hint: {"center_y": .5}

            MDBoxLayout:
                size_hint: None, None
                size: "140dp", "42dp"

                MDRelativeLayout:
                    size_hint: None, None
                    size: "140dp", "42dp"

                    ScaleLabel:
                        text: "PartyPlaytime"
                        font_size: "18sp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        bold: True
                        adaptive_size: True

        MDWidget:
            size_hint_y: None
            height: "12dp"

        MDFloatLayout:
            id: float_box
            size_hint: .8, .6

            MDBoxLayout:
                size_hint: None, None
                size: float_box.size
                pos_hint: {"top": 1}

                FitImage:
                    source: "logos/Board_Blitz_-_Logo.png"

            MDBoxLayout:
                size_hint: None, None
                size: "80dp", "80dp"
                pos_hint: {"right": 1}
                md_bg_color: "black"
                y: float_box.top - self.height / 2

        MDFloatLayout:
            id: bottom_box
            size_hint_y: .4
            md_bg_color: "red"

            MDBoxLayout:
                size_hint: None, None
                size: "180dp", "72dp"

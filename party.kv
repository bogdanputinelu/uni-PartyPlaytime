            size_hint_y:  None
            height: "250dp"
            y: register_box.top - self.height *2.5
            pos_hint: {"center_x": .5}
            radius: 10

            MDFloatLayout:
                id: name_box
                size_hint_y: .25

                MDTextField:
                    id: first_name_register
                    mode: "rectangle"
                    hint_text: "First Name"
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_focus: 0, 0, 0, 1
                    text_color_focus: 0, 0, 0, 1
                    size_hint_x: None
                    width: "130dp"
                    y: name_box.top - self.height * 1.25 + dp(3)
                    x: name_box.x + (name_box.width / 2 - self.width) / 2

                MDTextField:
                    id: last_name_register
                    mode: "rectangle"
                    hint_text: "Last Name"
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_focus: 0, 0, 0, 1
                    text_color_focus: 0, 0, 0, 1
                    size_hint_x: None
                    width: "130dp"
                    y: name_box.top - self.height * 1.25 + dp(3)
                    x: name_box.x + (3 * name_box.width / 2 - self.width) / 2


            MDFloatLayout:
                id: details_box
                size_hint_y: .75

                MDTextField:
                    id: email_register
                    mode: "rectangle"
                    hint_text: "E-Mail"
                    icon_right: "email"
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_focus: 0, 0, 0, 1
                    text_color_focus: 0, 0, 0, 1
                    size_hint_x: None
                    width: "280dp"
                    y: details_box.top - self.height * 1.2 + dp(4)
                    x: details_box.x + (details_box.width - self.width) / 2

                MDTextField:
                    id: nickname_register
                    mode: "rectangle"
                    hint_text: "Nickname"
                    hint_text_color_focus: 0, 0, 0, 1
                    line_color_focus: 0, 0, 0, 1
                    text_color_focus: 0, 0, 0, 1
                    size_hint_x: None
                    width: "280dp"
                    y: details_box.top - self.height * 2.5 + dp(22)
                    x: details_box.x + (details_box.width - self.width) / 2

<HomeScreen>:
    name: "home"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "12dp"

        MDTopAppBar:
            md_bg_color: 'grey'
            specific_text_color: 'black'
            right_action_items: [['text-box-outline', lambda x: x]]
            left_action_items: [['account-outline', lambda x: app.account_info()]]
            elevation: 0

        MDBoxLayout:
            adaptive_height: True
            spacing: "8dp"
            padding: 0, 0, "24dp", 0

            MDSeparator:
                pos_hint: {"center_y": .5}
                size_hint_x: None
                width: "36dp"
                color: "black"

            MDBoxLayout:
                size_hint: None, None
                size: "140dp", "42dp"

                MDRelativeLayout:
                    size_hint: None, None
                    size: "140dp", "42dp"

                    ScaleLabel:
                        text: "PartyPlaytime"
                        font_size: "36sp"
                        bold: True
                        adaptive_size: True

        MDLabel:
            text: "Play!"
            adaptive_height: True
            bold: True
            halign: "right"
            padding_x: "24dp"

        MDScrollView:

            MDList:
                spacing: "12dp"

                GameCard:
                    source: "logos/Board_Blitz_-_Logo.png"
                    game_name: "BoardBlitz"
                    next_screen: "boardblitz"

                GameCard:
                    source: "logos/Headspin_-_Logo.png"
                    game_name: "HeadSpin"
                    next_screen: "headspin"

                GameCard:
                    source: "logos/Word_Rush_-_Logo.png"
                    game_name: "WordRush"
                    next_screen: "rush"

                GameCard:
                    source: "logos/Tic_Tac_Toe_-_Logo.png"
                    game_name: "TicTacToe"
                    next_screen: "tictactoe"

                GameCard:
                    source: "logos/Help_Us_Decide_-_Logo.png"
                    game_name: "Help Us Decide"
                    next_screen: "helpusdecide"


<BoardBlitzScreen>:
    name: "boardblitz"
    md_bg_color: "white"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            md_bg_color: root.md_bg_color
            specific_text_color: "black"
            elevation: 0
            right_action_items: [["magnify", lambda x: x]]
            left_action_items: [["chevron-left", lambda x: root.go_back(app.root)]]

        MDBoxLayout:
            adaptive_height: True
            spacing: "18dp"
            padding: 0, 0, "24dp", 0

            MDSeparator:
                size_hint_x: None
                width: "36dp"
                color: "black"
                pos_hint: {"center_y": .5}

            MDIcon:
                icon: "weather-sunny"
                pos_hint: {"center_y": .5}

            MDBoxLayout:
                size_hint: None, None
                size: "140dp", "42dp"

                MDRelativeLayout:
                    size_hint: None, None
                    size: "140dp", "42dp"

                    ScaleLabel:
                        text: "PartyPlaytime"
                        font_size: "18sp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        bold: True
                        adaptive_size: True

        MDWidget:
            size_hint_y: None
            height: "12dp"

        MDFloatLayout:
            id: float_box
            size_hint: .8, .6

            MDBoxLayout:
                size_hint: None, None
                size: float_box.size
                pos_hint: {"top": 1}

                FitImage:
                    source: "logos/Board_Blitz_-_Logo.png"

            MDBoxLayout:
                size_hint: None, None
                size: "80dp", "80dp"
                pos_hint: {"right": 1}
                md_bg_color: "black"
                y: float_box.top - self.height / 2

        MDFloatLayout:
            id: bottom_box
            size_hint_y: .4
            md_bg_color: "red"

            MDBoxLayout:
                size_hint: None, None
                size: "180dp", "72dp"
                y: bottom_box.top - self.height / 2
                md_bg_color: "yellow"

                ScaleLabel:
                    text: "BoardBlitz"
                    bold: True
                    font_style: "H3"
                    font_size: "42sp"
                    scale_value_x: .6
                    scale_value_y: .6
                    adaptive_size: True
                    pos_hint: {"center_y": .7}


            MDBoxLayout:
                orientation: "vertical"
                adaptive_size: True
                y: bottom_box.top - self.height

                MDLabel:
                    text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc quis ultrices mi. Praesent ornare ante eleifend porta imperdiet. Vestibulum quis tincidunt ligula. Nam ut sapien ut lacus vehicula interdum at in nunc."
                    adaptive_size: True
                    text_size: root.width - dp(100), None
                    padding_x: "28dp"
                    theme_text_color: "Hint"

                MDBoxLayout:
                    adaptive_height: True
                    spacing: "12dp"
                    padding: "12dp"

                    MDIconButton:
                        icon: "map-marker-outline"

                    MDIconButton:
                        icon: "map-search-outline"

                    MDIconButton:
                        icon: "home-outline"

                    MDFlatButton:
                        text: "[b]More[/b]"
                        pos_hint: {"center_y": .5}

    MDBoxLayout:
        size_hint: None, None
        size: "144dp", "48dp"
        pos_hint: {"right": 1}
        md_bg_color: "black"



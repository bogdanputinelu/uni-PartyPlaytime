                    x: details_box.x + (details_box.width - self.width) / 2

<HomeScreen>:
    name: "home"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "12dp"

        MDTopAppBar:
            md_bg_color: 'grey'
            specific_text_color: 'black'
            right_action_items: [['text-box-outline', lambda x: x]]
            left_action_items: [['account-outline', lambda x: app.account_info()]]
            elevation: 0

        MDBoxLayout:
            adaptive_height: True
            spacing: "8dp"
            padding: 0, 0, "24dp", 0

            MDSeparator:
                pos_hint: {"center_y": .5}
                size_hint_x: None
                width: "36dp"
                color: "black"

            MDBoxLayout:
                size_hint: None, None
                size: "140dp", "42dp"

                MDRelativeLayout:
                    size_hint: None, None
                    size: "140dp", "42dp"

                    ScaleLabel:
                        text: "PartyPlaytime"
                        font_size: "36sp"
                        bold: True
                        adaptive_size: True

        MDLabel:
            text: "Play!"
            adaptive_height: True
            bold: True
            halign: "right"
            padding_x: "24dp"

        MDScrollView:

            MDList:
                spacing: "12dp"

                GameCard:
                    source: "logos/Board_Blitz_-_Logo.png"
                    game_name: "BoardBlitz"
                    next_screen: "boardblitz"

                GameCard:
                    source: "logos/Headspin_-_Logo.png"
                    game_name: "HeadSpin"
                    next_screen: "headspin"

                GameCard:
                    source: "logos/Word_Rush_-_Logo.png"
                    game_name: "WordRush"
                    next_screen: "wordrush"

                GameCard:
                    source: "logos/Tic_Tac_Toe_-_Logo.png"
                    game_name: "TicTacToe"
                    next_screen: "tictactoe"

                GameCard:
                    source: "logos/Help_Us_Decide_-_Logo.png"
                    game_name: "Help Us Decide"
                    next_screen: "helpusdecide"


<BoardBlitzScreen>:
    name: "boardblitz"
    md_bg_color: "white"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            md_bg_color: root.md_bg_color
            specific_text_color: "black"
            elevation: 0
            right_action_items: [["magnify", lambda x: x]]
            left_action_items: [["chevron-left", lambda x: root.go_back(app.root)]]

        MDBoxLayout:
            adaptive_height: True
            spacing: "18dp"
            padding: 0, 0, "24dp", 0

            MDSeparator:
                size_hint_x: None
                width: "36dp"
                color: "black"
                pos_hint: {"center_y": .5}

            MDIcon:
                icon: "weather-sunny"
                pos_hint: {"center_y": .5}

            MDBoxLayout:
                size_hint: None, None
                size: "140dp", "42dp"

                MDRelativeLayout:
                    size_hint: None, None
                    size: "140dp", "42dp"

                    ScaleLabel:
                        text: "PartyPlaytime"
                        font_size: "18sp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        bold: True
                        adaptive_size: True

        MDWidget:
            size_hint_y: None
            height: "12dp"

        MDFloatLayout:
            id: float_box
            size_hint: .8, .6

            MDBoxLayout:
                size_hint: None, None
                size: float_box.size
                pos_hint: {"top": 1}


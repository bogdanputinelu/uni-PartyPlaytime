                        center_y: self.parent.center_y

        BoxLayout:
            AnchorLayout:
                size_hint: 0.33, 1
                anchor_x: "right"
                anchor_y: "center"
                Button:
                    size_hint: 0.4, 0.67
                    background_color: 0, 0, 0, 0
                    on_press: root.ids.tic_image.source = "logos/Tic_Tac_Toe_-_Logo_pressed.png"

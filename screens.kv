<WordRushRules>:
    name: "rushRules"

    canvas:
        Color:
            rgba: utils.get_color_from_hex("#CBDDD1")
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "WordRush Rules"
            font_size: 32
            color: utils.get_color_from_hex("#437B56")

        Label:
            text: "! Be the first team to win a certain amount of rounds by guessing the word that you and your team members will be miming, drawing or describing ! "
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            color: utils.get_color_from_hex("#437B56")
            halign: 'center'
            valign: 'top'
            font_size: 18

        Label:
            text: "Every round, each team chooses a team member that will have to make his team guess what he is miming, drawing or describing. At the start of the round, without showing the others the screen, the chosen player sees the word given to him and the type of round that he is supposed to play (miming, drawing or describing). His goal is to make his team members guess the word that he is miming, drawing or describing (depending on the round) within 1 minute. If his team members guess the word within the given time, the team earns a point. If they don't, they do not earn a point. Each team has the right to ask for another word 3 times, if they do not want to play the word they were given. The teams take turns repeating this proccess, until they reach a certain score or play a certain number of rounds, depending on their preference"
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            color: utils.get_color_from_hex("#437B56")
            halign: 'center'
            valign: 'top'
            font_size: 18

        Label:
            height: self.texture_size[1]

        Button:
            text: "Click to go back to WordRushMenu"
            font_size: 32
            on_release: app.root.current = "rush"
            size_hint: 1, 1
            color: utils.get_color_from_hex("#CBDDD1")
            background_color:utils.get_color_from_hex("#437B56")
            size_hint_y: None
            text_size: self.width, None
            halign: 'center'
            valign: 'top'

